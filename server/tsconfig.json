{
  "include": ["src/**/*"],
  "compilerOptions": {
    "rootDir": ".",
    "mapRoot": ".",
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2018",
    "lib": ["es2018", "dom"],
    "typeRoots": ["node_modules/@types", "typings.d.ts"]
  },
  "exclude": ["node_modules/**/*"]
}
