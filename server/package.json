{
  "name": "daily-trends-server",
  "version": "1.0.0",
  "author": "Juan Pons",
  "description": "DailyTrends App Backend Server",
  "scripts": {
    "debug": "node --nolazy --inspect-brk=0.0.0.0 dist/server.js",
    "cz": "git-cz",
    "lint": "eslint . --ext .js,.ts",
    "lint-fix": "eslint . --ext .js,.ts --fix",
    "pre-commit": "lint-staged",
    "pre-push": "npm run format-check",
    "webpack": "per-env",
    "webpack:development": "webpack --env=development --mode=development",
    "webpack:staging": "webpack webpack --env=staging --mode=production",
    "webpack:production": "webpack webpack --env=production --mode=production",
    "test": "npx mocha --reporter spec",
    "start": "per-env",
    "start:development": "webpack --mode=development --watch",
    "start:staging": "webpack --mode=production && node dist/server.js",
    "start:production": "webpack --mode=production && node dist/server.js",
    "nodemon": "nodemon --inspect dist/server.js"
  },
  "license": "ISC",
  "dependencies": {
    "@types/lodash": "^4.14.149",
    "@types/lodash-es": "^4.17.3",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "dotenv-webpack": "^1.7.0",
    "express": "^4.17.3",
    "lodash": "^4.17.15",
    "log4js": "^6.1.2",
    "mocha": "^7.1.0",
    "mongoose": "^5.9.3",
    "per-env": "^1.0.2",
    "puppeteer": "^2.1.1",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.3",
    "@types/friendly-errors-webpack-plugin": "^0.1.2",
    "@types/log4js": "^2.3.5",
    "@types/mongoose": "^5.7.3",
    "@types/node": "^13.9.0",
    "@types/puppeteer": "^2.0.1",
    "@types/webpack": "^4.41.7",
    "@types/webpack-merge": "^4.1.5",
    "@types/webpack-node-externals": "^1.7.1",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "chalk": "^3.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-json": "^2.1.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "fork-ts-checker-webpack-plugin": "^4.0.5",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "hard-source-webpack-plugin": "^0.13.1",
    "log-symbols": "^3.0.0",
    "nodemon": "^2.0.2",
    "nodemon-webpack-plugin": "^4.3.1",
    "prettier": "^1.19.1",
    "progress-bar-webpack-plugin": "^2.1.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin": "^0.5.0"
  },
  "nodemonConfig": {
    "name": "nodemon",
    "homepage": "http://nodemon.io",
    "nodemonConfig": {
      "ignore": [
        "test/*",
        "docs/*",
        "*.js.map",
        "node_modules/**"
      ],
      "delay": "600",
      "watch": [
        "*dist/**/*.*"
      ],
      "ext": "js,json",
      "verbose": true
    }
  },
  "engines": {
    "node": ">=8.10.0",
    "eslint": ">6.0.0",
    "typescript": ">2.1.0",
    "webpack": ">4.0.0"
  }
}
